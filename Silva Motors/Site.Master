        <div class="body-content h-100">
            <asp:ContentPlaceHolder ID="MainContent" runat="server">
            </asp:ContentPlaceHolder>
            <footer class="footer">
                <p>&copy; <%: DateTime.Now.Year %> - Developed by G3 Technologies (Pvt) Ltd</p>
