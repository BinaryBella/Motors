                        </li>
                    </ul>
                    <a href="#" class="logout-btn">LOGOUT</a>
                </div>
            </div>
        </nav>

        <!-- Submenu navigation bar -->
        <nav class="navbar navbar-expand submenu-navbar">
            <div class="container-fluid">
                <ul class="navbar-nav mx-auto">
